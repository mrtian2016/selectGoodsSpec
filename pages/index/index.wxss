page {
  padding-top: 100rpx;
}
.group {
  margin-top: 30rpx;
  padding: 0 20rpx;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.group-title {
  color: #333333;
  font-size: 32rpx;
  font-weight:400;
}
.specs {
  margin-top: 20rpx;
}
.spec {
  float: left;
  border:1rpx solid rgba(217,22,28,1);
  padding: 0 20rpx ;
  color: rgba(217,22,28,1);
  margin-right: 30rpx;
  border-radius: 28rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
}
.selected {
  color: #fff;
  background-color: rgba(217,22,28,1);
}
